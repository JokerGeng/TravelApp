            <InputText @bind-Value="loginModel.Email" placeholder="Email Address" class="input" type=email />
            <ValidationMessage For="@(()=>loginModel.Email)" />
        </div>
        <div class="form-group">
            <InputText @bind-Value="loginModel.Password" placeholder="Password" class="input" type="password" />
            <ValidationMessage For="@(()=>loginModel.Password)" />
        </div>
